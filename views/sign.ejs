<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale= 1">
    <link rel="stylesheet" href="/stylesheets/signStyle.css?ver=1">
    <title>SignUp Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>
  <body>
    <% include common/header.ejs %>
    <div id ="title">
      <h2 class="title">
        회원가입
      </h2>
    </div>
    <div id="wrapper">
      <div id="content">
        <!-- Email -->
        <div>
          <h3 class="join_title">
            <label for="email">이메일</label>
          </h3>
          <span>
            <input type="email" id="email" name="email" class="int" maxlength="30"> <!--글자 수 30자로 제한-->
          </span>
        </div>
        <!-- PW1 -->
        <div>
          <h3 class="join_title"><label for="pw">비밀번호</label></h3>
          <span>
            <input type="password" id="pw" name="pw" class="int" maxlength="16" placeholder="비밀번호는 8글자에서 16글자 사이로 입력해주세요.">
          </span>
        </div>
        <!-- PW2 -->
        <div>
          <h3 class="join_title"><label for="confpw">비밀번호 재확인</label></h3>
          <span>
            <input type="password" id="confpw" name="confpw" class="int" maxlength="16">
          </span>
        </div>
        <!-- NAME -->
        <div>
          <h3 class="join_title"><label for="name">이름</label></h3>
          <span>
            <input type="text" id="name" name="name" class="int" maxlength="20">
          </span>
        </div>
        <div>
          <h3 class="join_title"><label for="age">나이<span class="optional"></span></label></h3>
          <span>
            <input type="number" id="age" name="age" class="int" min="1" max="200">
          </span>
        </div>
        <div>
          <h3 class="join_title"><label for="nickname">닉네임<span class="optional"></span></label></h3>
          <span>
            <input type="text" id="nickname" name="nickname" class="int" maxlength="20">
          </span>
        </div>
        <!-- JOIN BTN-->
        <div class="btn_area">
          <button type="submit" id="btnJoin">
            <span>가입하기</span>
          </button>
        </div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      function signupCheck(){

        var user_data = new Object();
        user_data.nickname = $("#nickname").val();
        user_data.email = $("#email").val();
        user_data.age = $("#age").val();
        user_data.pw = $("#pw").val();

        return Ajax("/join/signup", user_data);

      }

      function Ajax(url, data){
        data = JSON.stringify(data);

        var xhr = new XMLHttpRequest();
        xhr.open('POST', url);
        xhr.setRequestHeader('content-type', "application/json");
        xhr.send(data);

        xhr.addEventListener('load', function (){
          var results = JSON.parse(xhr.responseText);
          if (results["stat"] == "true"){
            alert("가입성공, 어서오세요!")
            location.href = '/login'
            return true;
          } else {
            alert("error")
            $("#email").val("");
            $("#email").focus();
          }
        })
        return false;
      }
    </script>
  </body>
</html>
